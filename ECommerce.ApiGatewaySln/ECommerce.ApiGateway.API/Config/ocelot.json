{
  "Routes": [
    //-->Identity service
    {
      "DownstreamPathTemplate": "/api/Identity/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5004
        }
      ],
      "UpstreamPathTemplate": "/api/Identity/{everything}",
      "UpstreamHttpMethod": [ "GET", "POST" ],
      "RateLimitOptions": {
        "EnableRateLimiting": true,
        "Period": "1m",
        "Limit": 5
      }
    },

    //-->Product service
    //Core product route
    //GET Method
    {
      "DownstreamPathTemplate": "/api/core/product/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5000
        }
      ],
      "UpstreamPathTemplate": "/api/core/product/{everything}",
      "UpstreamHttpMethod": [ "GET" ]
    },
    //POST,PUT,DELETE
    {
      "DownstreamPathTemplate": "/api/core/product/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5000
        }
      ],
      "UpstreamPathTemplate": "/api/core/product/{everything}",
      "UpstreamHttpMethod": [ "POST", "DELETE" ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": []
      }
    },

    //Clients product route
    //GET Method
    {
      "DownstreamPathTemplate": "/api/clients/product/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5000
        }
      ],
      "UpstreamPathTemplate": "/api/clients/product/{everything}",
      "UpstreamHttpMethod": [ "GET" ]
      //only apply caching for routes that are not being changed frequently
      //"FileCacheOptions": {
      //  "TtlSeconds": 60,
      //  "Region": "default",
      //  "Header": "ECommerce-Caching"
      //}
    },
    //POST,PUT,DELETE
    {
      "DownstreamPathTemplate": "/api/clients/product/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5000
        }
      ],
      "UpstreamPathTemplate": "/api/clients/product/{everything}",
      "UpstreamHttpMethod": [ "POST", "DELETE" ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": []
      }
    },

    //-->Order Service
    {
      "DownstreamPathTemplate": "/api/order/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5002
        }
      ],
      "UpstreamPathTemplate": "/api/order/{everything}",
      "UpstreamHttpMethod": [ "GET", "POST", "DELETE" ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": []
      }
    }
  ],

  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:4998",
    "RateLimitOptions": {
      "QuotaExceededMessage": "You are overwhelming the server with too many requests.",
      "ClientWhitelist": [],
      "EnableRateLimiting": true,
      "Period": "1m",
      "Limit": 100,
      "HttpStatusCode": 429
    }
  }
}
